<toolSet name="External Tools">
  <tool name="php-cs-fixer" description="PHP CS FIXR" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="/usr/local/bin/php-cs-fixer" />
      <option name="PARAMETERS" value="fix $FileDir$/$FileName$ --rules=@Symfony,@PSR2,line_ending,full_opening_tag,indentation_type,blank_line_before_statement,class_definition" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>